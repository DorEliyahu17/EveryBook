@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row" style="background-color: white;text-align:center; position: relative; width: 340px; margin: auto; padding: 30px; top: 90px; box-shadow: 1px 1px 8px 0px;">
    <div class="col-md-12">
        <h3 style="width:100%;">@ViewData["Title"]</h3>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <div class="form-group" style="position:relative; top:5px;">
                <p>
                    <a style="font-weight: bold;" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already Registered? Login</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
