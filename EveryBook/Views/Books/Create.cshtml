@model EveryBook.Models.Book

@{
    ViewData["Title"] = "Create";
}
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Book - Create</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link active" aria-current="page" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model != null)
            {
                <span class="text-danger">This Book is already created or the "Available Quantity" is less than 1</span>
            }
        <div class="form-group">
            <span asp-validation-for="PictureUrl" class="text-danger"></span>
            <br />
            <p><em>Picture Url</em></p>
            <input asp-for="PictureUrl" class="form-control" placeholder="" />
        </div>
            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <p><em>Name</em></p>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Author" class="text-danger"></span>
                <br />
                <p><em>Author</em></p>
                <input asp-for="Author" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Price" class="text-danger"></span>
                <br />
                <p><em>Price</em></p>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
                <p><em>Description</em></p>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                <br />
                <p><em>Available Quantity</em></p>
                <input asp-for="AvailableQuantity" class="form-control" value="1" />
            </div>
            <div class="form-group">
                <p><em>Genre Id</em></p>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
