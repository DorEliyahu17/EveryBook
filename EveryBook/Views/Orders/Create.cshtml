@model EveryBook.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-validation-for="PurchaseTime" class="text-danger"></span>
                <br />
                <label asp-for="PurchaseTime" class="control-label"></label>
                <input asp-for="PurchaseTime" class="form-control" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <label asp-for="ExtendUserId" class="control-label"></label>
                <select asp-for="ExtendUserId" class ="form-control" asp-items="ViewBag.ExtendUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DistributionUnitId" class="control-label"></label>
                <select asp-for="DistributionUnitId" class ="form-control" asp-items="ViewBag.DistributionUnitId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
