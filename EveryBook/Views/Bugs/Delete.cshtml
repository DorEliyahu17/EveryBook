@model EveryBook.Models.Bug

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete bug number: @Model.Id</h1>
<hr />

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        @if (Model.IsDone)
        {
            <dt class="col-sm-2" style="color: #155724">
                Status:
            </dt>
            <dd class="col-sm-10" style="color: #155724">
                <b>Done!</b>
            </dd>
        }
        else
        {
            <dt class="col-sm-2" style="color: #856404">
                Status:
            </dt>
            <dd class="col-sm-10" style="color: #856404">
                <b>Pending</b>
            </dd>
        }
        <dt class="col-sm-2">
            Reporter Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExtendUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to Bugs List</a>
    </form>
</div>
